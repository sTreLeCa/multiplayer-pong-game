{
  "compilerOptions": {
    "target": "ES2020", // Or newer, like ES2022
    "module": "commonjs",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  },
  "include": ["src/**/*"], // Ensure only src files are compiled
  "exclude": ["node_modules"]
}